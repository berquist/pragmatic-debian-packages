description "KiwiIRC"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 5 60
normal exit 0 2

limit nofile 8192 8192
setuid _kiwiirc
setgid _kiwiirc
console log

pre-start script
    [ -r /etc/kiwiirc/config.js ] || exit 0
end script

exec /usr/lib/kiwiirc/kiwi -f start -c /etc/kiwiirc/config.js
